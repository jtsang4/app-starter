# App Configuration
VITE_APP_URL="http://localhost:3000"
VITE_APP_TITLE="App Starter"

# Server Configuration
SERVER_URL="http://localhost:3000"
PORT=3000

# Database Configuration (Development)
DATABASE_URL="postgresql://postgres:postgres@localhost:5433/appstarter_dev"

# Database Configuration (Docker Production)
# POSTGRES_DB=appstarter
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your_secure_password
# DATABASE_URL="postgresql://postgres:your_secure_password@postgres:5432/appstarter"

# Better Auth Configuration, generate a secure secret using: openssl rand -base64 32
BETTER_AUTH_SECRET="your-secret-key-change-this-in-production-should-be-at-least-32-characters-long"
BETTER_AUTH_URL="http://localhost:3000"

# OAuth Providers (Optional)
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Admin Configuration
# Comma-separated list of admin emails
ADMIN_EMAILS="admin@appstarter.com"

# Redis Configuration (Optional)
REDIS_URL="redis://localhost:6379"

# PgAdmin Configuration (Development)
PGADMIN_DEFAULT_EMAIL="admin@appstarter.com"
