{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": [
    "./migrate.ts",
    "./seed.ts",
    "./schema/**/*.ts",
    "../env.ts"
  ],
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],

    "strict": true,
    "skipLibCheck": true,

    "noEmit": true,
    "verbatimModuleSyntax": false,
    "allowImportingTsExtensions": false,

    "baseUrl": "."
  }
}

